
@{
    ViewBag.Title = "AddTask";
}

<h2>@ViewBag.Error</h2>

<h2>@ViewBag.AuthorizedUser.UserName's Task List</h2>

<h2>Add New Task</h2>

<form action="/Home/AddNewTask" method="post">
    User Name: <input readonly="" value="@ViewBag.AuthorizedUser.UserName" name="UserName" /><br />
    Task Name: <input type="text" name="TaskName" /><br />
    Task Description: <input type="text" name="TaskDescription" /><br />
    Due Date: <input type="datetime" name="DueDate" /><br />
    Status: <input type="text"name="Status" value=" Not Complete"/><br />
    <input type="submit" value="Add" />
</form>


